                    codepoints.c
                    convert_string.c
                    util_str.c
                    util_unistr_w.c
                    pull_push.c
                    util_unistr.c
                    ''',
                    deps='DYNCONFIG ICONV_WRAPPER smb-panic samba-debug',
                    public_deps='talloc')
